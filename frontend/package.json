{
  "name": "frontend",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "dev": "NEXT_PUBLIC_DEBUG=true next dev",
    "dev:mocked": "NEXT_PUBLIC_MOCK_API=true npm run dev",
    "watch": "chokidar \"src/**/*\" \"next.config.js\" --initial --command=\"npm run watch_build\"",
    "watch_build": "NEXT_PUBLIC_DEBUG=true npm run build",
    "build": "next build",
    "build:mocked": "NEXT_PUBLIC_MOCK_API=true NEXT_PUBLIC_DEBUG=true npm run build",
    "start": "next start",
    "lint": "stylelint '**/*.scss' && prettier --check './src' && next lint",
    "licensecheck": "license-checker --excludePrivatePackages --production --onlyAllow 'MPL; MIT; BSD-3-Clause; BSD-2-Clause; 0BSD; Apache-2.0; ISC; Zlib; CC0; Unlicense; WTFPL; Unicode-DFS-2016;'",
    "test": "jest",
    "postinstall": "msw init public/ --save",
    "prepare": "if [ \"$ON_HEROKU\" != \"True\" ]; then cd .. && husky install frontend/.husky; fi"
  },
  "dependencies": {
    "@fluent/bundle": "^0.18.0",
    "@fluent/langneg": "^0.7.0",
    "@fluent/react": "^0.15.2",
    "@mozilla-protocol/core": "^17.0.1",
    "@stripe/stripe-js": "^2.1.1",
    "chokidar-cli": "^3.0.0",
    "cldr-localenames-modern": "^43.1.0",
    "msw": "^1.3.0",
    "react": "18.2.0",
    "react-aria": "^3.27.0",
    "react-dom": "18.2.0",
    "react-ga": "^3.3.1",
    "react-intersection-observer": "^9.5.2",
    "react-qr-code": "^2.0.12",
    "react-stately": "^3.25.0",
    "react-toastify": "^9.1.3",
    "swr": "^2.2.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.4.19",
    "@next/eslint-plugin-next": "^13.4.19",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest-axe": "^3.5.5",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "babel-jest": "^29.6.4",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-testing-library": "^6.0.1",
    "fast-check": "^3.12.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.6.4",
    "jest-junit": "^16.0.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^14.0.1",
    "next": "^13.4.19",
    "prettier": "3.0.3",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.66.1",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-scss": "^13.0.0",
    "stylelint-scss": "^5.1.0",
    "typescript": "^5.2.2"
  },
  "volta": {
    "node": "18.12.1",
    "npm": "8.19.2"
  },
  "overrides": {
    "react@<18": "18.2.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
